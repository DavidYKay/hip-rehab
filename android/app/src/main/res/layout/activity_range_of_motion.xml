<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".RangeOfMotionActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/extensionEdit"
        android:layout_marginTop="78dp"
        android:layout_alignLeft="@+id/saveButton"
        android:layout_alignStart="@+id/saveButton"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/adductionEdit"
        android:layout_toEndOf="@+id/extensionLabel"
        android:layout_alignBottom="@+id/adductionLabel"
        android:layout_toRightOf="@+id/extensionLabel"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/abductionEdit"
        android:layout_toEndOf="@+id/adductionLabel"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/adductionEdit"
        android:layout_alignStart="@+id/adductionEdit"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/saveButton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="82dp"
        android:layout_toRightOf="@+id/adductionLabel"
        android:layout_toEndOf="@+id/adductionLabel"
        android:layout_alignRight="@+id/title_textview"
        android:layout_alignEnd="@+id/title_textview"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Extension"
        android:id="@+id/extensionLabel"
        android:layout_toStartOf="@+id/saveButton"
        android:layout_alignBottom="@+id/extensionEdit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Abduction"
        android:id="@+id/abductionLabel"
        android:layout_toStartOf="@+id/abductionEdit"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Adduction"
        android:id="@+id/adductionLabel"
        android:layout_below="@+id/extensionLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Range of Motion"
        android:id="@+id/title_textview"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/adductionLabel"
        android:layout_toEndOf="@+id/adductionLabel"/>

</RelativeLayout>
